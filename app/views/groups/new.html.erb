<div class=" container d-flex flex-column justify-content-center align-items-center">
  <div class="budget-header w-100">
  <h1> <%= link_to user_groups_path do %>
    <i class="fa fa-arrow-left" aria-hidden="true" style="color: #3778c2; padding-left: 22px"> </i>
    <% end %>
    </h1>
  </div>
  <div class="card w-100 d-flex justify-content-center align-items-center  p-3 shadow p-3 mb-5 bg-body rounded">
    <h2 class=" d-flex p-2  mb-3"> Create New Category</h2>

    <%= form_with model: @group, url: user_groups_path(current_user),  scope: :group, class: 'd-flex flex-column  col-md-5 justify-content-center align-items-center' do |f| %>
      <div class="input-group p-2  mb-3">
        <%= f.label :icon, class: "input-group-text" %><br />
        <%= f.text_field :icon, autofocus: true, autocomplete: "icon", class: 'form-control' %>
      </div>

      <div class="input-group p-2 mb-3">
        <%= f.label :name, class: "input-group-text" %><br />
        <%= f.text_field :name, autocomplete: "name", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Save Category", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>